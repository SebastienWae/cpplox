{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "binaryDir": "build",
      "installDir": "install",
      "toolchainFile": "${sourceDir}/externals/vcpkg/scripts/buildsystems/vcpkg.cmake"
    },
    {
      "name": "ninja-multi",
      "hidden": true,
      "inherits": "base",
      "generator": "Ninja Multi-Config"
    },
    {
      "name": "gcc",
      "inherits": "ninja-multi",
      "environment": {
        "CXX": "g++"
      }
    },
    {
      "name": "clang",
      "inherits": "ninja-multi",
      "environment": {
        "CXX": "clang++"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-gdwarf-4"
      }
    },
    {
      "name": "clang-sanitize",
      "inherits": "clang",
      "cacheVariables": {
        "SANITIZE_ADDRESS": "ON",
        "SANITIZE_UNDEFINED": "ON"
      }
    },
    {
      "name": "clang-fuzz",
      "inherits": "clang-sanitize",
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-DFUZZING_BUILD_MODE_UNSAFE_FOR_PRODUCTION -UNDEBUG -fsanitize-coverage=inline-8bit-counters -fsanitize-coverage=trace-cmp -DADDRESS_SANITIZER"
      }
    }
  ]
}